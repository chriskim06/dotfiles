#!/usr/bin/env bash

#
# add kubeconfig info to tmux status line
#

ctx=$(kubectl config current-context 2>/dev/null)
ns=$(kubectl config view --minify --output 'jsonpath={..namespace}' 2>/dev/null)
out="âŽˆ"
if [[ -n "$ctx" ]]; then
  ctx="${ctx#arn:aws:eks:}"
  region="${ctx%%:*}"
  name="${ctx##*/}"
  if [[ "$region" == "us-west-2" ]]; then
    out="$out $region/$name"
  else
    out="$out $name"
  fi
fi
if [[ -n "$ns" ]]; then
  out="$out:$ns"
fi
echo "| $out |"
